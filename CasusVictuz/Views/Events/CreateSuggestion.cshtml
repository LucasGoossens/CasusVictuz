@model Casusvictuz.Event

@{
    ViewData["Title"] = "CreateSuggestion";
}

<h1>Maak een suggestie</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSuggestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Start datum</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Start tijd</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Beschrijving</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spots" class="control-label">Aantal plaatsen</label>
                <input asp-for="Spots" class="form-control" />
                <span asp-validation-for="Spots" class="text-danger"></span>
            </div>

            @* <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAccepted" /> @Html.DisplayNameFor(model => model.IsAccepted)
                </label>
            </div> *@

            <div class="form-group">
                <label asp-for="UrlLinkPicture" class="control-label">Url-link afbeelding (niet verplicht)</label>
                <input asp-for="UrlLinkPicture" class="form-control" />
                <span asp-validation-for="UrlLinkPicture" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Stuur suggestie" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexUser">Terug</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
