@model IEnumerable<CasusVictuz.Models.Location>

@{
    ViewData["Title"] = "Index";
}

<h1>Alle Locaties</h1>

<p>
    <a asp-action="Create">Maak nieuwe locatie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Locatie
            </th>
            <th>
                Aantal plekken
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Spots)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Pas aan</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Verwijder</a>
            </td>
        </tr>
}
    </tbody>
</table>
