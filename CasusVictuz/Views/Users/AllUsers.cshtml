@model IEnumerable<Casusvictuz.User>

@{
    ViewData["Title"] = "Alle gebruikers";
}

<h1>Alle gebruikers</h1>

<p>
    <a asp-action="Create">Maak nieuwe gebruiker</a>  <!-- kan weg maar maakt niet uit --!>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Naam
            </th>
            <th>
                  E-mail
            </th>
            <th>
                Wachtwoord
            </th>
            <th>
                Is Admin
            </th>
            <th>
                Is lid
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMember)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Pas aan</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Verwijder</a>
            </td>
        </tr>
}
    </tbody>
</table>
