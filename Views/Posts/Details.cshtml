@using Casusvictuz
@model Casusvictuz.Thread

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Title)
        </dd>
    </dl>
</div>

<div>
    <h3>Create Comment</h3>

    <form asp-action="CreateComment">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Content of the comment -->
        <div class="form-group">
            <label asp-for="Content" class="control-label"></label>
            <input asp-for="Content" class="form-control" />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>


        <input type="hidden" name="ThreadId" value="@Model.Id" />

        @* dit moet dat CurrentUserId van ingelogde user worden uiteindelijk *@
        @* <input type="hidden" name="UserId" value="@ViewBag.CurrentUserId" /> *@

        <div class="form-group">
            <input type="submit" value="Create Comment" class="btn btn-primary" />
        </div>
    </form>


</div>
 
