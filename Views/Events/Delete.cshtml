@model Casusvictuz.Event

@{
    ViewData["Title"] = "Delete";
}


<h3>Weet jij zeker dat je dit evenement/suggestie wilt verwijderen</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Start tijd
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            Naam evenement
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Beschrijving
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Aantal plaatsen
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Spots)
        </dd>
        <dt class = "col-sm-2">
            Locatie
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location.Name)
        </dd>
        <dt class = "col-sm-2">
            suggestie
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsAccepted)
        </dd>
        <dt class = "col-sm-2">
            Catagorie
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Title)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijder" class="btn btn-danger" /> |
        <a asp-action="IndexAdmin">Terug</a>
    </form>
</div>
