@model IEnumerable<Casusvictuz.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Datum
            </th>
            <th>
                Tijd
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @(item.Date.HasValue ? item.Date.Value.ToString("dd-MM-yyyy") : "N/A")
                </td>
                <td>
                    @(item.Date.HasValue ? item.Date.Value.ToString("HH:mm") : "N/A")
                </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Meer info</a>
            </td>
        </tr>
}
    </tbody>
</table>
