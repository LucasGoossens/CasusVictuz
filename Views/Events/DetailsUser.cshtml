@using CasusVictuz.Models
@using System.Security.Claims
@model Casusvictuz.Event

@{
    ViewData["Title"] = "Details";
}

<h1>Evenement informatie</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Evenement
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Datum Tijd
        </dt>
        <dd class="col-sm-10">
            @(Model.Date.HasValue ? Model.Date.Value.ToString("dd-MM-yyyy") : "N/A")
        </dd>
        <dt class="col-sm-2">
            Tijd
        </dt>
        <dd class="col-sm-10">
            @(Model.Date.HasValue ? Model.Date.Value.ToString("HH:mm") : "N/A")
        </dd>
        <dt class="col-sm-2">
            Beschrijving
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Aantal plekken voor event
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Spots)
        </dd>
        <dt class="col-sm-2">
            Aantal beschikbare plekken
        </dt>
        <dd class="col-sm-10">
            @{
                var beschikbarePlekken = Model.Spots - Model.Registrations.Count(); // Bereken beschikbare plekken
            }
            @beschikbarePlekken
        </dd>
        <dt class="col-sm-2">
            Locatie
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            Catagory
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Title)
        </dd>
        <dt class="col-sm-2">
            Organisator
        </dt>
        <dd class="col-sm-10">
            @{
                var firstOrganizer = Model.Registrations
                .FirstOrDefault(r => r.IsOrganised)?.User?.Name;

                if (!string.IsNullOrEmpty(firstOrganizer))
                {
                    @firstOrganizer
                }
                else
                {
                    <span>onbekend</span>
                }
            }
        </dd>
    </dl>
</div>
<div>
    @{
        var currentUserId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        if (currentUserId == null)
        {
            <p>U dient zich in te loggen voor u zich kan inschrijven</p>
        }
        else
        {
            int loggedInUserId = int.Parse(currentUserId);

            bool userIsAlreadyRegistered = Model.Registrations.Any(r => r.UserId == loggedInUserId);
            bool isMember = User.HasClaim("IsMember", "True");

            if (userIsAlreadyRegistered)
            {
                <p>Je bent ingeschreven voor dit evenement</p>
            }

            else if (Model.Spots <= Model.Registrations.Count())
            {
                <p>Sorry dit evenement is volgeboekt</p>
            }

            else
            {
                if (!isMember && (DateTime.Now - Model.Date.Value).TotalDays < 7)
                {
                    <div>U kunt zich als gast niet meer aanmelden voor dit evenement. </div>
                }
                else
                {
                    <form asp-action="Register" asp-controller="Events" method="post">
                        <input type="hidden" name="eventId" value="@Model.Id" />
                        <button type="submit" class="btn btn-primary">Inschrijven</button>
                    </form>
                }
            }
        }
    }
    <a asp-action="IndexUser" class="btn btn-warning">Terug</a>
</div>
