@using CasusVictuz.VieuwModels


@{
    ViewData["Title"] = "Home";
}
@model HomeViewModel

<div class="homepage">
    <br>
    <!-- Next Event Section -->
    <section class="next-event">
        <div class="event-content">
        <h2>Eerstvolgende Evenement:</h2>
            @if (Model.NextEvent != null)
            {
                @if (Model.NextEvent?.UrlLinkPicture != null)
                {
                    <img src="@Model.NextEvent.UrlLinkPicture" alt="Event Image" class="event-img">
                }
                else
                {
                    <img src="https://i.pinimg.com/originals/8e/07/80/8e078013204d0cc9876e9edbb1fd3f85.jpg" alt="Event Image" class="event-img">
                }
                <div class="event-items">
                    <h3>@Model.NextEvent?.Name</h3>
                    <p>@Model.NextEvent?.Description</p>
                    <p>@Model.NextEvent?.Date?.ToString("dd-MM-yyyy HH:mm")</p>
                    <a asp-controller="Events" asp-action="IndexUser" class="btn btn-primary">Schrijf je nu in!</a>
                </div>
            }
            else
            {
                <p>Er is momenteel niet een evenement gepland helaas :(</p>
            }
        </div>

    </section>


    <!-- Agenda Section -->
    <section class="agenda">
        <h3>Agenda</h3>
        <div class="agenda-items">
            @if (Model.Events.Count != 0)
            {
                @foreach (var eventItem in Model.Events)
                {
                    <div class="agenda-item">
                        @if (!string.IsNullOrEmpty(eventItem.UrlLinkPicture))
                        {
                            <img src="@eventItem.UrlLinkPicture" alt="Agenda Image" class="agenda-img">
                        }
                        else
                        {
                            <img src="https://i.pinimg.com/originals/8e/07/80/8e078013204d0cc9876e9edbb1fd3f85.jpg" alt="Agenda Image" class="agenda-img">
                        }
                        <div class="agenda-details">
                            <strong>@eventItem.Name</strong>
                            <br>@eventItem.Description<br>
                            <small>@eventItem.Date?.ToString("dd-MM-yyyy")</small>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>
                    Er staan (verder) geen evenementen op de planning
                </p>
            }
        </div>
        <br>
        <a asp-controller="Events" asp-action="IndexUser" class="btn btn-primary">Meer evenementen bekijken!</a>
    </section>
</div>

    <!-- Sponsors Section -->
    <section class="sponsors">
        <h3 style="justify-content: center;">Onze Sponsoren</h3>
        <div class="sponsor-logos">
            <!-- Placeholder images for sponsors -->
            <img src="https://www.shb-online.nl/wp-content/uploads/2019/11/Zuyd-Hogeschool-1.png" alt="Sponsor 1">
            <img src="https://topofminds.com/wp-content/uploads/2016/01/logo_jumbo.png" alt="Sponsor 2">
            <img src="https://welovesnow.nl/wp-content/uploads/2020/12/Logo-SnowWorld-1024x1000-1.png" alt="Sponsor 3">
            <img src="https://th.bing.com/th/id/OIP.G79RrtuQRn6a1x27OzMv2wHaDv?rs=1&pid=ImgDetMain" alt="Sponsor 4">
        </div>
    </section>
</div>

<!-- Optional Scripts Section -->
@section Scripts {
    <script src="~/js/site.js"></script>
}
