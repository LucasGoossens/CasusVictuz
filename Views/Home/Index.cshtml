@using CasusVictuz.VieuwModels

@model HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="homepage">
    <!-- Next Event Section -->
    <section class="next-event">
        @if (Model.NextEvent != null)
        {
            <div class="event-content">
                <div class="event-image">
                    @if (!string.IsNullOrEmpty(Model.NextEvent.UrlLinkPicture))
                    {
                        <img src="@Model.NextEvent.UrlLinkPicture" alt="Event Image">
                    }
                    else
                    {
                        <img src="https://t4.ftcdn.net/jpg/08/52/93/57/360_F_852935791_pMCeBDdFRTw9VjZbvf1aU1a5tjWtSz8b.jpg" alt="Event Image">
                    }
                </div>
                <div class="event-details">
                    <h2>@Model.NextEvent.Name</h2>
                    <p>@Model.NextEvent.Description</p>
                    <p><strong>Datum:</strong> @Model.NextEvent.Date?.ToString("dd-MM-yyyy HH:mm")</p>
                    <a asp-controller="Events" asp-action="DetailsUser" asp-route-id="@Model.NextEvent.Id" class="button">Schrijf je nu in!</a>
                </div>
            </div>
        }
        else
        {
            <p>Er is momenteel geen evenement gepland helaas :(</p>
        }
    </section>

    <!-- Upcoming Events Section -->
    <section class="upcoming-events">
        <h3>Aankomende Evenementen</h3>
        @if (Model.Events != null && Model.Events.Any())
        {
            <div class="events-list">
                @foreach (var eventItem in Model.Events)
                {
                    <div class="event-item">
                        @if (!string.IsNullOrEmpty(eventItem.UrlLinkPicture))
                        {
                            <img src="@eventItem.UrlLinkPicture" alt="Event Image">
                        }
                        else
                        {
                            <img src="https://t4.ftcdn.net/jpg/08/52/93/57/360_F_852935791_pMCeBDdFRTw9VjZbvf1aU1a5tjWtSz8b.jpg" alt="Event Image">
                        }
                        <div class="event-info">
                            <h4>@eventItem.Name</h4>
                            <p>@eventItem.Description</p>
                            <p><strong>Datum:</strong> @eventItem.Date?.ToString("dd-MM-yyyy HH:mm")</p>
                            <a asp-controller="Events" asp-action="DetailsUser" asp-route-id="@eventItem.Id" class="button">Bekijk Details</a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>Er staan geen verdere evenementen op de planning.</p>
        }
    </section>

    <!-- Sponsors Section -->
    <section class="sponsors">
        <h3>Onze Sponsoren</h3>
        <div class="sponsor-logos">
            <img src="https://www.shb-online.nl/wp-content/uploads/2019/11/Zuyd-Hogeschool-1.png" alt="Sponsor 1">
            <img src="https://topofminds.com/wp-content/uploads/2016/01/logo_jumbo.png" alt="Sponsor 2">
            <img src="https://welovesnow.nl/wp-content/uploads/2020/12/Logo-SnowWorld-1024x1000-1.png" alt="Sponsor 3">
            <img src="https://th.bing.com/th/id/OIP.G79RrtuQRn6a1x27OzMv2wHaDv?rs=1&pid=ImgDetMain" alt="Sponsor 4">
        </div>
    </section>
</div>

<!-- Optional Scripts Section -->
@section Scripts {
    <script src="~/js/site.js"></script>
}

<!-- Custom Styles -->
<style>
    .homepage {
        width: 90%;
        margin: 0 auto;
    }

    /* Next Event Section */
    .next-event {
        margin-bottom: 50px;
    }

    .next-event .event-content {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .next-event .event-image img {
        width: 100%;
        max-width: 1200px;
        height: auto;
        border-radius: 10px;
    }

    .next-event .event-details {
        margin-top: 20px;
        text-align: center;
        width: 80%;
        max-width: 800px;
    }

    .next-event .event-details h2 {
        font-size: 2em;
        margin: 10px 0;
        color: #0a3d62;
    }

    .next-event .event-details p {
        font-size: 1.1em;
        color: #333;
    }

    .next-event .event-details .button {
        margin-top: 15px;
        padding: 12px 25px;
        font-size: 1.2em;
        font-weight: bold;
        background-color: #007ACC;
        color: #fff;
        text-decoration: none;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

    .next-event .event-details .button:hover {
        background-color: #005b99;
    }

    /* Upcoming Events Section */
    .upcoming-events h3 {
        margin-top: 50px;
        margin-bottom: 20px;
    }

    .upcoming-events .events-list {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .upcoming-events .event-item {
        width: calc(33.333% - 20px);
        border: 1px solid #ccc;
        padding: 15px;
        box-sizing: border-box;
        border-radius: 8px;
        transition: background-color 0.3s;
        cursor: pointer;
    }

    .upcoming-events .event-item:hover {
        background-color: #f9f9f9;
    }

    .upcoming-events .event-item img {
        width: 100%;
        height: auto;
        border-radius: 5px;
    }

    .upcoming-events .event-info h4 {
        margin-top: 10px;
        font-size: 1.2em;
        color: #0a3d62;
    }

    .upcoming-events .event-info p {
        font-size: 0.9em;
        color: #333;
        margin: 5px 0;
    }

    .upcoming-events .event-info .button {
        display: inline-block;
        padding: 8px 15px;
        background-color: #007ACC;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        font-size: 0.9em;
        font-weight: bold;
        transition: background-color 0.3s ease;
        margin-top: 10px;
    }

    .upcoming-events .event-info .button:hover {
        background-color: #005b99;
    }

    /* Sponsors Section */
    .sponsors {
        margin-top: 50px;
        text-align: center;
    }

    .sponsors h3 {
        margin-bottom: 20px;
    }

    .sponsors .sponsor-logos {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 40px;
    }

    .sponsors .sponsor-logos img {
        max-width: 200px;
        height: auto;
    }

    /* Responsive Design */
    @@media screen and (max-width: 768px) {
        .next-event .event-content {
            flex-direction: column;
        }

        .upcoming-events .event-item {
            width: calc(50% - 20px);
        }
    }

    @@media screen and (max-width: 480px) {
        .upcoming-events .event-item {
            width: 100%;
        }
    }
</style>
