@model CasusVictuz.Models.Location

@{
    ViewData["Title"] = "Delete";
}
=

<h3>Weet je zeker dat je deze locatie wil verwijderen?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Plek
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Aantal plaatsen
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Spots)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Verwijder" class="btn btn-danger" /> |
        <a asp-action="Index">Terug</a>
    </form>
</div>
