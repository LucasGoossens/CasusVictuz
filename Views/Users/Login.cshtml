@model Casusvictuz.User

@{
    ViewData["Title"] = "Inloggen";
}

<h1>Welkom Terug!</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" id="successMessage">
        <strong>@TempData["SuccessMessage"]</strong> 
        <br>Log in om je account te verifiÃ«ren.
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Naam</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Wachtwoord</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Inloggen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
