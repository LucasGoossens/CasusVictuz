@model IEnumerable<Casusvictuz.Registration>

@{
    ViewData["Title"] = "Index";
}

<h1>Alle inschrijvingen voor opkomende evenementen</h1>

<table class="table">
    <thead>
        <tr>

            <th>
                Evenement
            </th>
            <th>
                Datum
            </th>
            <th>
                Tijd
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Name)
            </td>
            <td>
                    @(item.Event.Date.HasValue ? item.Event.Date.Value.ToString("dd-MM-yyyy") : "N/A")
            </td>
                <td>
                    @(item.Event.Date.HasValue ? item.Event.Date.Value.ToString("HH:mm") : "N/A")
                </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Bekijken</a>
                    @if (!item.IsOrganised)
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Uitschrijven</a>
                    }
                </td>
        </tr>
}
    </tbody>
</table>
