@model Casusvictuz.Registration

@{
    ViewData["Title"] = "Details";
}

<h1>Evenement informatie</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Evenement
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Event.Name)
        </dd>
        <dt class="col-sm-2">
            Datum
        </dt>
        <dd class="col-sm-10">
            @(Model.Event.Date.HasValue ? Model.Event.Date.Value.ToString("dd-MM-yyyy") : "N/A")
        </dd>
        <dt class="col-sm-2">
            Tijd
        </dt>
        <dd class="col-sm-10">
            @(Model.Event.Date.HasValue ? Model.Event.Date.Value.ToString("HH:mm") : "N/A")
        </dd>
        <dt class="col-sm-2">
            Beschrijving
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Description)
        </dd>
        <dt class="col-sm-2">
            Locatie
        </dt>
            @{
                var location = Model.Event?.Location?.Name;
                if (location == null)
                {
                    location = "Onbekend";
                }
            }
        <dd class="col-sm-10">
            @location
        </dd>
        <dt class="col-sm-2">
            Catagory
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Category.Title)
        </dd>
        <dt class="col-sm-2">
            Is organisator?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsOrganised)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Terug</a>
    @{if (Model.IsOrganised)
        {
            <p>Als organisator kunt u zich niet uitschrijven voor dit evenement</p>
        }
        else
        {
            <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">Uitschrijven</a>
        }
    }
</div>
